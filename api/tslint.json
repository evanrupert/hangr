{
  "rules": {
    "semicolon": [
      true,
      "never"
    ],
    "quotemark": [
      true,
      "single"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "max-line-length": [
      true,
      140
    ],
    "import-spacing": true,
    "indent": [
      true,
      "spaces"
    ],
    "prefer-const": true
  }
}